<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/movie_details_image_description"/>

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="4dp"
        android:layout_alignTop="@+id/image_view_picture"
        android:layout_toEndOf="@+id/image_view_picture" />

    <TextView
        android:id="@+id/text_view_year"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/text_view_genre"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:padding="4dp"
        android:layout_alignBottom="@+id/image_view_picture"
        android:layout_alignStart="@+id/text_view_title"
        android:layout_toEndOf="@+id/image_view_picture"
        android:layout_toStartOf="@id/text_view_year" />

    <ImageView
        android:id="@+id/image_view_marked_seen"
        android:src="@drawable/ic_eye"
        android:visibility="invisible"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>